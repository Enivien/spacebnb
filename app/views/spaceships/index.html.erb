

<div class="content">
  <div class="container">
    <h1 class="text-center">More then 5000 spaceships:</h1>
    <div class="row">
      <% @spaceships.each do |spaceship| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card text-center">
          <% if spaceship.picture.present? %>
          <div class="card-header" style="background-image: url('<%= cl_image_path spaceship.picture, height: 300, width: 400, crop: :fill %>')">
          </div>
          <% else %>
          <div class="card-header" style="background-image: url('https://media.tenor.com/images/baa51bc6187cb2fc286a3d3582061f12/tenor.png')">
          </div>
          <% end %>
          <div class="card-body">
            <%= link_to spaceship.name, spaceship_path(spaceship), class: "title" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="text-center padded">
      <%= link_to "List a spaceship", new_spaceship_path, class: "btn btn-primary" %>
    </div>

  </div>
  <div id="map"><%= image_tag "space.png" %></div>
</div>

