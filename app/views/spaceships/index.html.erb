

<div class="content">
  <div class="container">
    <h1 class="text-center">More then 5000 spaceships:</h1>
    <div class="row">
      <% @spaceships.each do |spaceship| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <%= link_to spaceship_path(spaceship) do %>
          <% if spaceship.picture.present? %>
            <div class="card" style="background-image: url('<%= cl_image_path spaceship.picture, height: 300, width: 400, crop: :fill %>')">
            <% else %>
            <div class="card" style="background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQN5qlP69YDBhOL-DV0cDt1b7TUe2D5RLIiCzNkjvcDldQGkVhR')">
          <% end %>
            <div class="card-category">Popular</div>
            <div class="card-description">
              <%= spaceship.name %>
            </div>
            <div class="card-price">
             $ <%= spaceship.price %>
            </div>
          </div>
        </div>
        <% end %>
          <% end %>
      </div>


      <div class="text-center padded">
        <%= link_to "List a spaceship", new_spaceship_path, class: "btn btn-primary" %>
      </div>

    </div>
    <div id="map"><%= image_tag "space.png" %></div>
  </div>
